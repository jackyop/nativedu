<!DOCTYPE html>
<html>
<head>
  <title>NativEdu</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="center">
		<h1>NativEdu</h1>
		<%=link_to "Home",root_path, class:"myButton" %>
		<% if admin? %>
			<%=link_to "Estudiantes",estudiantes_path, class:"myButton" %>
			<%=link_to "Docentes",docentes_path, class:"myButton" %>
			<%=link_to "Cursos",cursos_path, class:"myButton" %>
		<%else%>
			<%=link_to "Login",login_path, class:"myButton" %>
		<%end%>
	</div>
<%= yield %>

</body>
</html>
